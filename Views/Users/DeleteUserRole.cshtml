@model HelpDesk.ViewModels.UsersDto.DeleteUserRoleViewModel

@{
    ViewData["Title"] = "Delete User Role";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-6"><i class="fas fa-trash-alt text-danger me-2"></i>Delete User Role</h1>
        <p class="text-muted">Are you sure you want to delete this User Role?</p>
    </div>

    
    <form asp-action="DeleteUserRole" class="mt-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <input type="hidden" asp-for="UserId"/>
        <input type="hidden" asp-for="RoleId"/>
        <button type="submit" class="btn btn-danger px-4">
            <i class="fas fa-trash me-1"></i> Delete
        </button>
        <a asp-action="UserRoleList" class="btn btn-secondary px-4">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </form>
</div>
