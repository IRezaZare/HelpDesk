@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles List";
    var count = 1;
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0 text-primary">
                <i class="fa-solid fa-shield"></i>Roles List
            </h2>
            <a class="btn btn-success" asp-action="CreateRole">
                <i class="fas fa-plus-circle me-1"></i> Create New Role
            </a>
        </div>
        @if (Model.Any())
        {

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.NormalizedName)</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                we don't have any data to show
            </div>
        }
    </div>
</div>
