@model HelpDesk.Entities.Ticket

@{
    ViewData["Title"] = "Delete ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-6"><i class="fas fa-trash-alt text-danger me-2"></i>Delete ticket</h1>
        <p class="text-muted">Are you sure you want to delete this ticket?</p>
    </div>

    <div class="card shadow-sm rounded-4 border border-danger-subtle">
        <div class="card-body">
            <h5 class="card-title mb-4"><i class="fas fa-ticket-alt me-2 text-secondary"></i>Ticket Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">Priority</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Priority)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Create Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedOn)</dd>
                <dt class="col-sm-3">Active / Inactive</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                    
                </dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" class="mt-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="fas fa-trash me-1"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </form>
</div>
