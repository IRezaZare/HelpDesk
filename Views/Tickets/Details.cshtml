@using HelpDesk.ViewModels.TicketsDto
@model TicketDetailDto

@{
    ViewData["Title"] = "Ticket Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fas fa-info-circle me-2"></i> Ticket Details
        </h4>
        <span class="badge bg-secondary">ID: @Model.Id</span>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-heading me-1 text-muted"></i> Title
            </dt>
            <dd class="col-sm-9">
                @Model.Title
            </dd>

            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-check-circle me-1 text-muted"></i> Status
            </dt>
            <dd class="col-sm-9">
                @Model.Status
            </dd>

            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-flag me-1 text-muted"></i> Priority
            </dt>
            <dd class="col-sm-9">
                @Model.Priority
            </dd>

            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-align-left me-1 text-muted"></i> Description
            </dt>
            <dd class="col-sm-9">
                @Model.Description
            </dd>

            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-calendar-alt me-1 text-muted"></i> Created On
            </dt>
            <dd class="col-sm-9">
                @Model.CreatedOn.ToString("yyyy/MM/dd HH:mm")
            </dd>

           
            <dt class="col-sm-3 text-end fw-semibold">
                <i class="fas fa-toggle-on me-1 text-muted"></i> Is Active
            </dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>

           

           
        </dl>
    </div>

    <div class="card-footer text-end">
        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-edit me-1"></i> Edit
        </a>
        <a class="btn btn-sm btn-secondary" asp-action="Index">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>
</div>
