@model HelpDesk.ViewModels.CommentsDto.CreateCommentDto


<div class="card-body">
    <form asp-action="Create" id="form" class="px-3 py-3">
        <input type="hidden" asp-for="TicketId" />
        <div class="border-bottom pb-2 mb-4">
            @if (Model.CommentsOfTicket.Any())
            {
                <h5 class="text-primary fw-bold mb-0">
                    <i class="bi bi-chat-left-dots me-2"></i> Add a comment
                </h5>
            }
            else
            {
                <h5 class="text-primary fw-bold mb-0">
                    <i class="bi bi-chat-left-dots me-2"></i> Add first comment
                </h5>
            }
        </div>
        <div class="form-floating mb-4">
            @if (Model.CommentsOfTicket.Any())
            {
                <textarea required asp-for="Description" class="form-control" id="floatingComment" placeholder="Please write a Comment Here." style="height: 160px"></textarea>
            }
            else
            {
                <textarea required asp-for="Description" class="form-control" id="floatingComment" placeholder="Please write first Comment Here." style="height: 160px"></textarea>
            }
            <label for="floatingComment">Submit</label>
            <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
        </div>
    </form>
    <div class="px-3 text-muted small text-end mt-1">
        Please enter your Comment respectfully and carefully.
    </div>
    @if (Model.CommentsOfTicket.Any())
    {
        <div class="mt-4">
            <h5 class="mb-3">Previous Comments</h5>
            <div class="list-group">
                @foreach (var item in Model.CommentsOfTicket)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start mb-2">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 text-primary">@item.CreatedBy</h6>
                            <small class="text-muted">@item.CreatedOn</small>
                        </div>
                        <p class="mb-1">@item.Description</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
    <div class="alert alert-info mt-4" role="alert">
        No comments have been added yet.
    </div>
    }
</div>
